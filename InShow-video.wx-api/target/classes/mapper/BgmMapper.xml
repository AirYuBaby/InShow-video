<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.InShowVideo.mapper.BgmMapper" >
  <resultMap id="BaseResultMap" type="com.InShowVideo.pojo.Bgm" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="author" property="author" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="path" property="path" jdbcType="VARCHAR" />
    <result column="choose_count" property="chooseCount" jdbcType="INTEGER" />
  </resultMap>
  <select id="queryByHart" resultMap="BaseResultMap">
        SELECT * FROM bgm ORDER BY choose_count DESC
  </select>
</mapper>